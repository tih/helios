SUBDIRS	= \
	cover \
	commands \
	libInterViews \
	libgraphic \
	libtext

all::
install.man:: install

format::
	-@for i in $(SUBDIRS); \
	do \
	if [ -d $$i ]; then \
	echo "formatting in $$i"; \
	(cd $$i; $(MAKE)  format); \
	else continue; fi; \
	done

print::
	-@for i in $(SUBDIRS); \
	do \
	if [ -d $$i ]; then \
	echo "printing in $$i"; \
	(cd $$i; $(MAKE)  print); \
	else continue; fi; \
	done

install::
	$(MKDIRHIER) $(MANPATH) $(MANDIR) $(LIBMANDIR)


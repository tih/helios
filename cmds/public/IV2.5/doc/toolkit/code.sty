% a simple environment for code listings
% should do the "\begin{verbatim}" but I couldn't get it to work!
% you need to do 
%
% \begin{code}{<indent>}
% \begin{verbatim}
% ...
% \end{verbatim}
% \end{code}

\newenvironment{code}[1]{
    \small
    \hrule
    \vspace{0.2ex}
    \begin{list}
	{}
	{\setlength{\leftmargin}{#1}\setlength{\rightmargin}{#1}}
}{
    \end{list}
    \vspace{1ex}
    \hrule
}
